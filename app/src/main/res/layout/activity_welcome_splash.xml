<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashscreen.WelcomeSplash"
    style="@style/splash">

    <ImageView
        android:id="@+id/img_Welcome_Splash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splash"
        android:layout_centerInParent="true"
        android:contentDescription="@string/todo" />
    <TextView
        android:id="@+id/txt_vaxino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Welcome_Splash"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:textColor="#ff0000"
        android:fontFamily="@font/pdark"
        />

    <TextView
        android:id="@+id/txt_Website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/www_vaxino_ir"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>