<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashscreen.WelcomeSplash"
    style="@style/splash">

    <ImageView
        android:id="@+id/img_Welcome_Splash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/logo_splash"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/txt_vaxino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Welcome_Splash"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:textColor="#00008B"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_vaxino"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="#00008B"
        />

    <TextView
        android:id="@+id/txt_Website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.vaxino.ir"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>