<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitycodes.MainActivity"
    android:background="@drawable/background_1"
    >

    <ImageView
        android:id="@+id/img_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_margin="10dp"
        android:contentDescription="@string/logo_vaxino"
        tools:srcCompat="@tools:sample/avatars"

        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_Mian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:fillViewport="true"
        android:layout_margin="10dp"
        android:background="@drawable/design_text_view"
        android:fontFamily="@font/frission">

        <TextView
            android:id="@+id/txt_Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:includeFontPadding="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/frission"/>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_Start_Vaccine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/design_button_1"
        android:text="@string/start_vaccine"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="@font/frission"/>

    <Button
        android:id="@+id/btn_Follow_Up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/design_button_1"
        android:text="@string/follow_up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="@font/frission"/>


</LinearLayout>
